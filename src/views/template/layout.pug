doctype html
html(lang="ko")
  head
    title #{pageTitle} | #{siteName}
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
  body
    header
      h1=pageTitle      
      nav
        ul
          li
            a(href="/") Home                    
          if loggedIn
            li
              a(href="/logout") Sign Out
            li
              a(href="/my-profile") #{loggedInUser.username}'s Profile
          else
            li
              a(href="/join") Sign Up
            li
              a(href="/login") Sign In
          li
            a(href="/videos/upload") Upload Video
          li
            a(href="/videos/search") Search Video
    main
      block content    
    include ../partials/footer.pug